<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_std</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textColor">@color/description_color</item>
        <item name="android:layout_marginTop">@dimen/margin_layout_counter</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/header_color</item>
        <item name="android:layout_marginStart">@dimen/margin_layout_std</item>
        <item name="android:layout_marginTop">@dimen/margin_layout_std</item>
    </style>

    <style name="StyleImageViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_iv_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="StyleFragmentHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/header_color</item>
        <item name="android:layout_marginStart">@dimen/margin_layout_std</item>
        <item name="android:layout_marginBottom">@dimen/margin_layout_std</item>
        <item name="android:background">@drawable/shape_radius_8</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_half</item>
    </style>

    <style name="StyleCardHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_std</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/header_color</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_layout_half</item>
        <item name="android:layout_marginTop">@dimen/margin_layout_half</item>
    </style>

    <style name="StyleCardDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/description_color</item>
        <item name="android:layout_marginVertical">@dimen/margin_layout_half</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_layout_half</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:buttonCornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="StyleCardMethod">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/description_color</item>
        <item name="android:textSize">@dimen/text_size_std</item>
    </style>

    <style name="StyleCardIngredient" parent="StyleCardMethod">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/margin_layout_quarter</item>
    </style>

    <style name="StyleRecyclerRecipe">
        <item name="android:background">@drawable/shape_white_radius_8</item>
        <item name="android:layout_margin">@dimen/margin_layout_std</item>
        <item name="android:padding">@dimen/padding_recycler_view</item>
        <item name="spanCount">1</item>
    </style>

    <style name="StyleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

</resources>